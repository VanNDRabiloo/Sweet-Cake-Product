<div class="product-tag-container">
    <div class="product-type">
      <a href="{{window.Shopify.shop}}/search?type=product&amp;q={{product.type }}">
        <button class="btn product-type-btn">{{ product.type }}</button>
      </a>
    </div>
    <div class="product-tag-wrapper">
    {% for tag in product.tags %}
      <div class="product-tag">
        <a href="{{window.Shopify.shop}}/search?type=product&amp;q={{tag}}"><button class=" btn product-tag-btn">{{ tag }}</button></a>
      </div>
    {% endfor %}
    </div>
  </div>